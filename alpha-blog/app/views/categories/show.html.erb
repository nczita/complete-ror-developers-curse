<h1 class="text-center mt-4"><%= @category.name %></h1>

<div class="text-center mt-4">
  <% if logged_in? && current_user.admin? %>
    <%= link_to "Edit", edit_category_path(@category), class: "btn btn-outline-success" %>
    <%= link_to "Delete", category_path(@category), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-warning" %>
  <% end %>
</div>

<h3 class="text-center mt-4">Articles</h3>
<div class="container">
  <div class="flickr_pagination">
    <%= will_paginate @articles, :container => false %>
  </div>

  <% @articles.each do |article| %>
    <%= render 'articles/article', article: article %>
  <% end %>

  <div class="flickr_pagination mb-4">
    <%= will_paginate @articles, :container => false %>
  </div>
</div>