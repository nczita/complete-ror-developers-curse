<div class="row justify-content-md-center">
  <div class="col-8 mt-4">
    <div class="card text-center shadow mb-5 bg-white rounded">
      <div class="card-header font-italic">
        <%= link_to user.username, user_path(user) %>
      </div>
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to gravatar_for(user, size:150), user_path(user) %>
        </h5>
        <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
        <%= link_to "View", user_path(user), class: "btn btn-outline-primary" %>
        <% if logged_in? %>
         <% if user == current_user %>
          <%= link_to "Edit", edit_user_path(user), class: "btn btn-outline-success" %>
         <% end %>
         <% if current_user.admin? %>
          <%= link_to "Delete", user_path(user), class: "btn btn-outline-danger", method: :delete,
              data: {confirm: "Are you sure you want to delete the user account and all associated articles?"} %>
        <% end %>
        <% end %>
      </div>
      <div class="card-footer text-muted">
        <small>Joined <%= time_ago_in_words(user.created_at) %></small>
      </div>
  </div>
</div>