<!-- prettier-ignore -->
<% if alert || notice %>
<div class="d-inline-block">
  <!-- prettier-ignore -->
  <%= render 'layouts/messages' %>
</div>
<!-- prettier-ignore -->
<% end %>

<% if @stock %>
<div class="card card-header d-inline-block mb-3">
  <!-- prettier-ignore -->
  <strong>Symbol: </strong>
  <!-- prettier-ignore -->
  <%= @stock.ticker %>
  <strong>Name: </strong>
  <!-- prettier-ignore -->
  <%= @stock.name %>
  <strong>Price: </strong>
  <!-- prettier-ignore -->
  <%= @stock.last_price %>
  <% if current_user.can_track_stock?(@stock.ticker) %>
    <%= link_to 'Add to Portfolio', user_stocks_path(user: current_user, ticker: @stock.ticker), class: 'btn btn-xs btn-success', method: :post %>
  <% else %>
  <!-- prettier-ignore -->
  <span class="badge badge-secondary">You are already tracking three stocks or track this stock alredy </span>
  <% end %>
</div>
<% end %>
