<h1>My Portfolio</h1>

<div class="pt-5">
  <h3>Search Stocks</h3>
  <!-- prettier-ignore -->
  <%= form_tag search_stock_path, method: :get do %>
  <div class="form-group row">
    <div class="col-sm-9 pr-0">
      <!-- prettier-ignore -->
      <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true,  class: "form-control form-control-lg" %>
    </div>
    <div class="col-sm-3 pl-0">
      <!-- prettier-ignore -->
      <%= button_tag type: :submit, class: "btn btn-success btn-lg" do %>
        <%= fa_icon "search" %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
<% if @stock %>
<div class="card card-header d-inline-block">
  <!-- prettier-ignore -->
  <strong>Symbol: </strong>
  <!-- prettier-ignore -->
  <%= @stock.ticker %>
  <strong>Name: </strong>
  <!-- prettier-ignore -->
  <%= @stock.name %>
  <strong>Price: </strong>
  <!-- prettier-ignore -->
  <%= @stock.last_price %>
</div>
<% end %>
