<h4 class="ui center aligned medium icon header">
  <i class="red circular coffee icon"></i>
  Say something
</h4>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui feed">
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, html: { class: "ui reply form", role: "form"}, url: message_path) do |message_form| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= message_form.text_field :body, placeholder: "Share something" %> 
              <%= message_form.button '<i class="bordered inverted orange edit icon"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
    </div>
    </div>
  </div>
  <div class="four wide column">
    <div class="ui fluid raised card chatbox"> 
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="item">
            Luke
          </a>
          <a class="item">
            All
          </a>
        </div>
      </div>
    </div>
  </div>
</div>